@using Sample.Application.TodoItems.Commands.AddTodoItem
@model AddTodoItemCommand

<form asp-action="AddItem" method="post">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title" />
    <label asp-for="DueAt">Due date</label>
    <input asp-for="DueAt" type="date" asp-format="{0:yyyy-MM-dd}" value="@DateTime.Today.Date" class="form-control" />
    <button type="submit">Add</button>
</form>